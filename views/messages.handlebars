    <div class="container">
        <div class="row">
            <div class="col-8 offset-2">
            
                <h1>{{msg}}</h1>
                <h2>Your Messages!</h2>
                <form>
                    <input id="sendTime" name="sendTime">

                    <div class="form-group">
                        <label for="message">Message to be sent</label>
                        <textarea class="form-control" id="startMessage" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary" id="startSubmit">Submit</button>
                </form>
                <br>
            <div class="container-fluid-2 bg-1">
                <h3 id="messages-heading">Your Current Messages:</h3>
                <ul id="message-list" class="list-group">
                    {{#each messages}}
                    <li data-id="{{this.id}}" class="list-group-item">
                        <button class="btn btn-danger float-right delete">ï½˜</button>
                    </li>
                    {{/each}}
                </ul>
                </div>
            </div>
            <div class="modal" id="updateDiv">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h2 class="modal-title"><i class="fas fa-exclamation"></i>Edit your Message!</h2>
                            <div id="modal-close" class="btn btn-danger">X</div>
                        </div>
                        <!--End modal header-->
                        <div class="modal-body">
                            <input type="text" id="update-input"></input>
                            <button type="submit" id="update-submit" class="btn btn-primary">Save</button>
                        </div>
                        <!--End modal body-->
                    </div>
                    <!--End modal content-->
                </div>
                <!--End modal-dialog-->
            </div>
            <!--End modal container div-->
        </div>


    </div>
</div>


